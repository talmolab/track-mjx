<?xml version="1.0" encoding="utf-8"?>
<mujoco model="mouse_ghostpair">
    <option integrator="RK4" timestep="0.001" gravity="0 0 -9.81" solver="CG" iterations="6" ls_iterations="6"></option>
	<default>
	<joint limited="true" solreflimit="0.01 1" solimplimit="0.99 0.9999 0" armature="6e-06" damping="0.003" stiffness="0.001"/>
	</default>
    <size njmax="1000" nconmax="400" nkey="1" nuser_jnt="1"/>
    <asset>
        <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2="0.6 0.8 1" width="256" height="1536"/>
        <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3" rgb2=".2 .3 .4"/>
        <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance=".2"/>
        <material name="ghost_material" rgba="1 1 1 0.3" specular="0" shininess="0"/>
        <mesh file="/root/vast/eric/stac-mjx/meshes/stl/Bone_Scapula_right_v3.stl"/>
        <mesh file="/root/vast/eric/stac-mjx/meshes/stl/Bone_Humerus_right_v3.stl"/>
        <mesh file="/root/vast/eric/stac-mjx/meshes/stl/Bone_Clavicle_right_v3.stl"/>
        <mesh file="/root/vast/eric/stac-mjx/meshes/stl/Bone_Ulna_right_v3.stl"/>
        <mesh file="/root/vast/eric/stac-mjx/meshes/stl/Bone_Radius_right_v3.stl"/>
        <mesh file="/root/vast/eric/stac-mjx/meshes/stl/Bone_Segments_Hand_fixed.stl"/>
    </asset>
    <worldbody>
        <light directional="true"/>
        <body name="ground" euler="0 0 0">
            <camera name="my_camera" pos="0.04 .004 0.037" fovy="20" quat="0.6532815 0.2705981 0.2705981 0.6532815"/>
            <camera name="close_profile" pos="0.04 .004 0.037" fovy="20" quat="0.6532815 0.2705981 0.2705981 0.6532815"/>

            <!-- Active Model (Original) -->
            <body name="clavicle" pos="0 0 0" euler="0 0 0">
                <geom type="mesh" mesh="Bone_Clavicle_right_v3" pos="0 0 0.0005" contype="1" conaffinity="0"/>
                <body name="scapula" pos="-0.0001 -0.0001 0.0005" euler="-30 -15 0">
                    <geom type="mesh" mesh="Bone_Scapula_right_v3" pos="0 0 0" contype="1" conaffinity="0"/>
                    <body name="humerus" pos="0 0.0007 -0.0002" euler="-15 0 0">
                        <inertial pos="-0.0005 0.0003 -0.004" mass="0.0001258" diaginertia="3e-8 3e-8 3e-8"/>
                        <geom type="mesh" mesh="Bone_Humerus_right_v3" pos="0 0 0" contype="1" conaffinity="0"/>
                        <joint name="sh_elv" type="hinge" pos="0 0 0" axis="0 1 0" range="-70 0" limited="true"/>
                        <joint name="sh_extension" type="hinge" pos="0 0 0" axis="0 0 1" range="-70 40" limited="true"/>
                        <joint name="sh_rotation" type="hinge" pos="0 0 0" axis="1 0 0" range="-25 89" limited="true"/>
                        <body name="ulna" pos="-0.0005 0.0003 -0.0068" euler="-15 0 0">
                            <geom type="mesh" mesh="Bone_Ulna_right_v3" pos="0 0 0" contype="1" conaffinity="0"/>
                            <joint name="elbow_joint" type="hinge" pos="0 0 0" axis="1 0 0" range="-80 90" limited="true"/>
                            <inertial pos="-0.0009 0.004 0.0005" mass="0.0001258" diaginertia="3e-8 3e-8 3e-8"/>
                            <body name="elbow" pos="0 0 0" euler="0 0 0">
                                <geom name="elbow_marker" type="sphere" size="0.0003" pos="0 0 0" contype="0" conaffinity="0" rgba="0.3 0.8 0.3 0.8"/>
                                <body name="radius" pos="0.00035 0.0002 0.0002" euler="0 0 0">
                                    <geom type="mesh" mesh="Bone_Radius_right_v3" pos="0 0 0" contype="1" conaffinity="0"/>
                                    <body name="wrist_body" pos="-0.002 0.0065 0.0005" euler="0 0 0">
                                        <geom name="wrist_marker" type="sphere" size="0.0003" pos="0 0 0" contype="0" conaffinity="0" rgba="0.3 0.8 0.3 0.8"/>
                                        <geom name="hand" type="mesh" mesh="Bone_Segments_Hand_fixed" pos="0 0 0"/>					
										<inertial pos="-0.0048 0.0019 0.012" mass=" 0.00071" diaginertia="7e-08 7e-08 7e-08"/>
                                    </body>
                                </body>
                            </body>
                        </body>
                    </body>
                </body>
            </body>

            <!-- Ghost Model (Duplicate with appended names) -->
            <body name="mouse_ghost" pos="0 0 0">
                <body name="clavicle_ghost" pos="0 0 0" euler="0 0 0">
                    <geom name="clavicle_ghost_geom" type="mesh" mesh="Bone_Clavicle_right_v3" pos="0 0 0.0005" contype="1" conaffinity="0" material="ghost_material"/>
                    <body name="scapula_ghost" pos="-0.0001 -0.0001 0.0005" euler="-30 -15 0">
                        <geom name="scapula_ghost_geom" type="mesh" mesh="Bone_Scapula_right_v3" pos="0 0 0" contype="1" conaffinity="0" material="ghost_material"/>
                        <body name="humerus_ghost" pos="0 0.0007 -0.0002" euler="-15 0 0">
                            <inertial pos="-0.0005 0.0003 -0.004" mass="0.0001258" diaginertia="3e-8 3e-8 3e-8"/>
                            <geom name="humerus_ghost_geom" type="mesh" mesh="Bone_Humerus_right_v3" pos="0 0 0" contype="1" conaffinity="0" material="ghost_material"/>
                            <joint name="sh_elv_ghost" type="hinge" pos="0 0 0" axis="0 1 0"  range="-70 0" limited="true"/>
                            <joint name="sh_extension_ghost" type="hinge" pos="0 0 0" axis="0 0 1"  range="-70 40" limited="true"/>
                            <joint name="sh_rotation_ghost" type="hinge" pos="0 0 0" axis="1 0 0"  range="-25 89" limited="true"/>
                            <body name="ulna_ghost" pos="-0.0005 0.0003 -0.0068" euler="-15 0 0">
                                <geom name="ulna_ghost_geom" type="mesh" mesh="Bone_Ulna_right_v3" pos="0 0 0" contype="1" conaffinity="0" material="ghost_material"/>
                                <joint name="elbow_joint_ghost" type="hinge" pos="0 0 0" axis="1 0 0"  range="-80 90" limited="true"/>
                                <inertial pos="-0.0009 0.004 0.0005" mass="0.0001258" diaginertia="3e-8 3e-8 3e-8"/>
                                <body name="elbow_ghost" pos="0 0 0" euler="0 0 0">
                                    <geom name="elbow_marker_ghost" type="sphere" size="0.0003" pos="0 0 0" contype="0" conaffinity="0" rgba="0.3 0.8 0.3 0.8"/>
                                    <body name="radius_ghost" pos="0.00035 0.0002 0.0002" euler="0 0 0">
                                        <geom name="radius_ghost_geom" type="mesh" mesh="Bone_Radius_right_v3" pos="0 0 0" contype="1" conaffinity="0" material="ghost_material"/>
                                        <body name="wrist_body_ghost" pos="-0.002 0.0065 0.0005" euler="0 0 0">
                                            <geom name="wrist_marker_ghost" type="sphere" size="0.0003" pos="0 0 0" contype="0" conaffinity="0" rgba="0.3 0.8 0.3 0.8"/>
                                            <geom name="hand_ghost" type="mesh" mesh="Bone_Segments_Hand_fixed" pos="0 0 0" material="ghost_material"/>					
										    <inertial pos="-0.0048 0.0019 0.012" mass=" 0.00071" diaginertia="7e-08 7e-08 7e-08"/>
                                        </body>
                                    </body>
                                </body>
                            </body>
                        </body>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>
    <actuator>
        <motor name="sh_elv_act" joint="sh_elv" ctrllimited="true" ctrlrange="-.1 .1" forcerange="-.1 .1"/>
		<motor name="sh_extension_act" joint="sh_extension" ctrllimited="true" ctrlrange="-.1 .1" forcerange="-.1 .1"/>
		<motor name="sh_rotation_act" joint="sh_rotation" ctrllimited="true" ctrlrange="-.1 .1" forcerange="-.1 .1"/>
		<motor name="elbow_act" joint="elbow_joint" ctrllimited="true" ctrlrange="-.05 .05" forcerange="-.1 .1"/>
    </actuator>
    <sensor>
        <actuatorfrc name="sh_elv_act_force" actuator="sh_elv_act"/>
        <actuatorfrc name="sh_extension_act_force" actuator="sh_extension_act"/>
        <actuatorfrc name="sh_rotation_act_force" actuator="sh_rotation_act"/>
        <actuatorfrc name="elbow_act_force" actuator="elbow_act"/>
        
        <!-- Add joint position sensors -->
        <jointpos name="sh_elv_pos" joint="sh_elv"/>
        <jointpos name="sh_extension_pos" joint="sh_extension"/>
        <jointpos name="sh_rotation_pos" joint="sh_rotation"/>
        <jointpos name="elbow_joint_pos" joint="elbow_joint"/>
    </sensor>
</mujoco>